<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:background="#EAEAEA"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_web_img_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:src="@mipmap/news_toolbar_icon_back"/>

            <ImageView
                android:id="@+id/dialog_web_img_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:src="@mipmap/news_toolbar_icon_comment"/>

            <ImageView
                android:id="@+id/dialog_web_radio_favorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:src="@mipmap/news_toolbar_icon_favorite"
                />

            <ImageView
                android:id="@+id/dialog_web_img_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:src="@mipmap/news_toolbar_icon_share"/>

            <ImageView
                android:id="@+id/dialog_web_img_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:src="@mipmap/news_toolbar_icon_more"/>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:paddingBottom="15dp"
            android:textCursorDrawable="@null"
            app:theme="@style/editTextLoginStyle"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_img_delete_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="25dp"
            android:src="@mipmap/mine_icon_bounced_close"
            android:visibility="gone"
            />

        <CheckBox
            android:id="@+id/login_cb_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:button="@drawable/selector_login_check_eye"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone"
            />


    </LinearLayout>


</RelativeLayout>